.modal.fade id="#{yield(:modal_id)}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"
  .modal-dialog role="document"
    .modal-content

      .modal-header
        h5.modal-title= yield(:modal_title)
        button.close aria-label="Close" data-dismiss="modal" type="button" 
          span aria-hidden="true" &times;

      .modal-body
        = yield(:modal_body)

      .modal-footer
        = yield(:modal_footer)
