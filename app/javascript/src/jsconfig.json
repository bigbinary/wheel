{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "module": "commonJS",
    "baseUrl": ".",
    "paths": {
      "neetoui": ["@bigbinary/neetoui"]
    },
    "pretty": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "checkJs": true,
    "jsx": "preserve"
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": ["./**/*.js", "./**/*.jsx"]
}
